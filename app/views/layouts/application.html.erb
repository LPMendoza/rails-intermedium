<!DOCTYPE html>
<html>
  <head>
    <title>Shoutr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div id="alertContainer" class="flash-messages flash-messages--<%= type == 'notice' ? 'success' : 'error' %>">
        <%= msg %>
        <button id="btnCloseFlash" class="close-flash">x</button>
      </div>
    <% end %>
    <% if signed_in? %>
      Signed in as: <%= current_user.email %>
      <%= button_to 'Sign out', sign_out_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign in', sign_in_path %>
    <% end %>
    <%= render 'search' %>
    <%= yield %>
  </body>
</html>
