<h1>Dashboards</h1>

<%= shout_form_for(TextShout) do |form| %>
  <% form.text_field :body, placeholder: "shout here!", required: true %>
<% end %>

<%= shout_form_for(PhotoShout) do |form| %>
  <% form.file_field :image, required: true %>
<% end %>

<% @shouts.each do |shout| %>
  <div>
    <%= avatar shout.user %>
    <%= shout.username %>
    <%= render shout.content %> 
    <%= time_ago_in_words(shout.created_at)%>
    <%= like_button(shout) %>
  </div>
<% end %>

<%= javascript_pack_tag 'dashboard' %>